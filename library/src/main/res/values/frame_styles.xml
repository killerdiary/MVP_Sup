<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base_AdxTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:textColorPrimary">@color/txt_black</item>
        <item name="android:textColorHighlight">@color/txt_gray_light</item>
        <item name="android:textColorHint">@color/txt_gray</item>
        <item name="android:textColorLink">@color/blue</item>
        <!--        <item name="android:textAppearance">@style/AppBaseTheme.TxtStyle</item>-->
        <item name="toolbarStyle">@style/CurToolbar</item>
        <item name="appHeaderHeight">@dimen/header_height</item>
        <item name="appBackground">@color/smoke</item>
        <item name="appThemeColor">@color/blue</item>
        <item name="appTitleSize">@dimen/txt_title</item>
        <item name="appTitleColor">@color/white</item>
        <item name="appTitleBarBg">?attr/appThemeColor</item>
        <item name="appProgressColor">@color/blue</item>
        <item name="appControlHighlight">@color/btn_highlight</item>
        <!--标题栏颜色-->
        <item name="colorPrimary">?attr/appThemeColor</item>
        <!--状态栏颜色-->
        <item name="colorPrimaryDark">?attr/appThemeColor</item>
        <!--控制各个控件被选中时的颜色-->
        <item name="colorAccent">?attr/appThemeColor</item>
        <!--控件的默认色调-->
        <item name="colorControlNormal">@color/white</item>
        <!--控件激活时候的色调-->
        <item name="colorControlActivated">@color/white</item>
        <!--控件高亮-->
        <item name="colorControlHighlight">@color/btn_highlight</item>
        <!--按钮默认状态下的背景色-->
        <item name="colorButtonNormal">?attr/appThemeColor</item>
        <item name="android:windowBackground">?attr/appBackground</item>
    </style>

    <style name="CurToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
        <!-- 设置该属性解决空白部分-->
    </style>
</resources>